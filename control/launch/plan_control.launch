<launch>
  <arg name="pose_topic"      value="/ekf_node/ekf_pose" />

  <!-- Route Planner node -->
  <node pkg="offboard_control" name="route_planner" type="route_planner.py" output="screen">
    <remap from="/pose_topic" to="$(arg pose_topic)"/>

    <param name="Z_tag"                 value="0.70" />
    <param name="threshold_start"       value="0.05" />
    <param name="threshold_curve"       value="0.07" />
    <param name="threshold_line"        value="0.1" />
    <param name="threshold_yaw"         value="0.09" />
  </node>

  <!-- main node -->
  <node pkg="offboard_control" name="velocity_control" type="velocity_control.py" output="screen">
    <remap from="/pose_topic" to="$(arg pose_topic)"/>
    <param name="Z_tag"     value="0.70" />
  </node>

</launch>
